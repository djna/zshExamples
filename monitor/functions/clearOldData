
# clear the output directories

# -L option changes are local to this functions
# -R reset to defaults
emulate -LR zsh

# don't warn about emoty directories or rm *
setopt nullglob
setopt rmstarsilent

DATADIR=data

echo "Before"
find $DATADIR -ls

rm -f $DATADIR/input/*.log
rm -f $DATADIR/reports/*.txt
rm -f $DATADIR/badFiles/*.log
rm -f $DATADIR/processedFiles/*.log

echo "\nAfter"
#find $DATADIR/input $DATADIR/reports $DATADIR/badFiles $DATAFIR/processedFiles -ls
find $DATADIR -ls

